<UserControl x:Class="ModelViewViewModel.Views.TodoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModelViewViewModel.Views"
             xmlns:vm="clr-namespace:ModelViewViewModel.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid Margin="5">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="65" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Margin="5">

            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom">
                <TextBlock Text="Todo title" />
            </Label>

            <TextBox Grid.Row="1" Grid.Column="0" x:Name="Title" />

            <Button Grid.Row="1" Grid.Column="1" Margin="10,0,0,0" Command="{Binding vm:AddCommand}" Content="Add" />

        </Grid>
        
    </Grid>
</UserControl>
